{
  "name": "@a11ylint/core",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Accessibility core linter",
  "author": "pplancq <paul.plancq@outlook.fr>",
  "maintainers": [
    "pplancq <paul.plancq@outlook.fr>",
    "CroquetMickael <mickael.croquet@laposte.net>"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a11ylint/core"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "concurrently --prefix-colors auto \"npm:eslint\" \"npm:tsc\"",
    "eslint": "eslint src tests --ext js,jsx,ts,tsx",
    "eslint:fix": "eslint src tests --ext js,jsx,ts,tsx --fix",
    "tsc": "tsc --noEmit",
    "package:check": "npm exec --yes package-lock-utd@1.1.3",
    "prepare": "husky"
  },
  "engines": {
    "node": ">= 20"
  },
  "bugs": {
    "url": "https://github.com/a11ylint/core/issues"
  },
  "keywords": [
    "a11y",
    "accessibility",
    "lint",
    "linter",
    "RGAA"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@pplancq/commitlint-config": "^2.2.0",
    "@pplancq/eslint-config": "^2.2.0",
    "@pplancq/prettier-config": "^1.1.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@types/node": "^20.14.15",
    "@vitest/coverage-v8": "^2.0.5",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsc-files": "^1.1.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "prettier": "@pplancq/prettier-config",
  "eslintConfig": {
    "extends": [
      "@pplancq/eslint-config/node",
      "@pplancq/eslint-config/vitest",
      "@pplancq/eslint-config/prettier"
    ]
  },
  "commitlint": {
    "extends": [
      "@pplancq/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint --fix",
    "*.{ts,tsx}": "tsc-files --noEmit",
    "(package|package-lock).json": "npm run package:check"
  },
  "volta": {
    "node": "20.16.0",
    "npm": "10.8.1"
  }
}
