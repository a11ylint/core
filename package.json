{
  "name": "@a11ylint/core",
  "version": "1.0.0-alpha.7",
  "license": "MIT",
  "description": "Accessibility core linter",
  "author": "PLANCQ Paul <paul.plancq@outlook.fr>",
  "maintainers": [
    "PLANCQ Paul <paul.plancq@outlook.fr>",
    "CroquetMickael <mickael.croquet@laposte.net>"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a11ylint/core"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "concurrently --prefix-colors auto \"npm:eslint\" \"npm:tsc\"",
    "eslint": "eslint \"{src,tests}/**/*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"{src,tests}/**/*.{js,jsx,ts,tsx}\" --fix",
    "tsc": "tsc --noEmit",
    "package:check": "node ./scripts/package-check.mjs",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "engines": {
    "node": "^20.19.5 || ^22.14.0 || >= 24.10.0"
  },
  "bugs": {
    "url": "https://github.com/a11ylint/core/issues"
  },
  "keywords": [
    "a11y",
    "accessibility",
    "lint",
    "linter",
    "RGAA"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@pplancq/commitlint-config": "^2.3.3",
    "@pplancq/eslint-config": "^5.0.21",
    "@pplancq/prettier-config": "^1.2.9",
    "@pplancq/semantic-release-config": "^2.0.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.9",
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "vitest-sonar-reporter": "^3.0.0"
  },
  "prettier": "@pplancq/prettier-config",
  "commitlint": {
    "extends": [
      "@pplancq/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint --fix",
    "*.{ts,tsx}": "tsc-files --noEmit",
    "(package|package-lock).json": "npm run package:check"
  },
  "release": {
    "extends": [
      "@pplancq/semantic-release-config"
    ],
    "repositoryUrl": "https://github.com/a11ylint/core"
  },
  "volta": {
    "node": "24.13.0",
    "npm": "11.7.0"
  },
  "files": [
    "build",
    "template"
  ],
  "dependencies": {
    "handlebars": "^4.7.8"
  }
}
